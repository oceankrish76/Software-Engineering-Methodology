using UnityEngine;
using System.Collections;

public class NewBehaviourScript : MonoBehaviour {
    public string stringToEdit = " ";
    void OnGUI() {
        stringToEdit = GUI.TextField(new Rect(10, 10, 200, 20), stringToEdit, 25);
    }
    void Awake() {
        DontDestroyOnLoad(transform.gameObject);
    }
}